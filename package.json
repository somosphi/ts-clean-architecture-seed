{
  "name": "ts-clean-architecture-seed",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/main/server.js",
  "scripts": {
    "test:unit": "nyc mocha --timeout 10000 --exit --config=.mocha.yml -r tsconfig-paths/register 'src/**/*.spec.ts'",
    "dev": "tsnd --respawn --ignore-watch node_modules -r tsconfig-paths/register ./src/main/server.ts",
    "lint": "eslint  'src/**/*.ts'",
    "check": "npm run test:unit  && npm run lint",
    "build": "rimraf dist && tsc -p . && cp -r ./src/presentation/i18n/locales ./dist/presentation/i18n",
    "migration:create": "knex migrate:make",
    "migration:latest": "knex migrate:latest",
    "start": "node -r ./prod-paths.js ./dist/main/server.js",
    "cli-dev": "tsnd -r tsconfig-paths/register src/main/modules/cli/index.ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "all": true,
    "include": [
      "src"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@somosphi/logger": "^1.6.0",
    "@types/bunyan-format": "^0.2.3",
    "@types/i18n": "^0.13.0",
    "amqplib": "^0.8.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "bunyan-format": "^0.2.1",
    "chai": "^4.3.4",
    "class-validator": "^0.13.1",
    "commander": "^7.2.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^1.8.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "i18n": "^0.13.3",
    "ioredis": "^4.27.4",
    "joi": "^17.4.0",
    "knex": "^0.19.5",
    "mocha": "^8.4.0",
    "module-alias": "^2.2.2",
    "mysql2": "^2.2.5",
    "nyc": "^15.1.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^2.7.1",
    "sinon": "^11.1.1",
    "table": "^6.7.1",
    "tsconfig-paths": "^3.9.0",
    "tsyringe": "^4.5.0",
    "typescript": "^4.3.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/amqplib": "^0.8.0",
    "@types/chai": "^4.2.18",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/cron": "^1.7.2",
    "@types/express": "^4.17.11",
    "@types/ioredis": "^4.26.4",
    "@types/mocha": "^8.2.2",
    "@types/sinon": "^10.0.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.34.0",
    "eslint": "^7.28.0",
    "eslint-config-airbnb-typescript": "^7.0.0",
    "eslint-config-airbnb-typescript-prettier": "^1.4.2",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.18.3",
    "ts-node-dev": "^1.1.6"
  }
